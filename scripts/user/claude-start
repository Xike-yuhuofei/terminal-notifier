#!/bin/bash
# claude-start - Claude Code 启动脚本（支持自定义窗口名称）
# 使用方法：
#   claude-start                    # 交互式询问窗口名称
#   claude-start "编译测试"          # 直接指定窗口名称
#   claude-start -                  # 使用默认名称（项目名）

SCRIPT_VERSION="1.0.0"

# 颜色定义
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${BLUE}  Claude Code 启动器 v${SCRIPT_VERSION}${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""

# 检查参数
if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    echo "用法："
    echo "  claude-start                    # 交互式询问窗口名称"
    echo "  claude-start \"编译测试\"          # 直接指定窗口名称"
    echo "  claude-start -                  # 使用默认名称（项目名）"
    echo ""
    echo "窗口名称会显示在 Toast 通知中，用于区分多个 Claude Code 实例。"
    exit 0
fi

# 处理窗口名称
if [ "$1" = "-" ]; then
    # 使用默认名称
    echo -e "${GREEN}✓${NC} 使用默认窗口名称（项目名）"
    unset CLAUDE_WINDOW_NAME
elif [ -n "$1" ]; then
    # 使用命令行参数
    WINDOW_NAME="$1"
    export CLAUDE_WINDOW_NAME="$WINDOW_NAME"
    echo -e "${GREEN}✓${NC} 窗口名称: ${YELLOW}${WINDOW_NAME}${NC}"
else
    # 交互式询问
    echo -e "${BLUE}请输入窗口名称（用于 Toast 通知识别）：${NC}"
    echo -e "${BLUE}常用名称示例：编译测试、单元测试、代码审查、性能优化、重构工作${NC}"
    echo ""
    read -p "窗口名称（直接回车使用默认名称）: " WINDOW_NAME

    if [ -n "$WINDOW_NAME" ]; then
        export CLAUDE_WINDOW_NAME="$WINDOW_NAME"
        echo ""
        echo -e "${GREEN}✓${NC} 窗口名称: ${YELLOW}${WINDOW_NAME}${NC}"
    else
        echo ""
        echo -e "${GREEN}✓${NC} 使用默认窗口名称（项目名）"
        unset CLAUDE_WINDOW_NAME
    fi
fi

echo ""
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${GREEN}启动 Claude Code...${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""

# 启动 Claude Code
claude
